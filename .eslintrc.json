{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "dist"
    ],
    "rules": {},
    "overrides": [
        {
            "files": [
                "*.test.ts",
                "*.test.tsx"
            ],
            "plugins": [
                "@typescript-eslint",
                "jest"
            ],
            "extends": [
                "plugin:jest/recommended"
            ]
        }
    ]
}